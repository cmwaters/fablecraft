  "private": true,
  "scripts": {
    "test": "cd tests && webpack && karma start",
    "test:build": "cd tests && webpack",
    "test:unit": "cd tests && karma start --input dist/uint.js",
    "build": "npm run build:source && npm run build:desktop",
    "build:dev": "NODE_ENV=development webpack --watch",
    "build:source": "NODE_ENV=production webpack",
    "build:desktop": "cd desktop && rm -rf ./dist && tsc",
    "dev": "npm run dev:desktop",
    "dev:desktop": "npm run build:desktop && npm run start:desktop",
    "dev:server": "concurrently \"npm run build:dev\" \"npm run start:server\"",
    "start": "npm run start:desktop",
    "start:server": "NODE_ENV=production nodemon server/index.js",
    "start:desktop": "electron dist/main.js",
    "lint": "eslint -c .eslintrc.js --ext .ts",
    "fix": "eslint --fix .eslintrc.js --ext .ts"
  },
