.reference
    position: absolute;
    height: 100vh;
    width: 100%;

.pillar
    position: absolute;
    top: 0px;
    left: 0px;

.family .card
    position: relative;
    width: 100%;

.card
    background-color: white;
    border-radius: 3px;
    min-height: 40px;
    padding: 5px;
    color: #aaa;

.command
    padding: 0px 15px 8px 15px;
    width: 100%;
    display: flex;
    &:.img 
        display: inline-block;
        width: 21px;
        padding-right: 5px;

    &:input
        display: inline-block;
        font-size: 12px;;
        color: #333;
        border: none;
        outline: none;

.ql-story
    background-color: red;
    width: 100%;
    height: 100px;
    border-radius: 10px;


.ql-card
    border: 1px solid #666;
    border-radius: 3px;
    padding: 0px 3px;
